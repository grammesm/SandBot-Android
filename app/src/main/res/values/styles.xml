<resources>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.SandBot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sandbot_blue</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Tab indicator -->
        <item name="colorPrimaryDark">@color/sandbot_blue_dark</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/sandbot_blue_accent</item>
        <item name="colorSurface">@color/sandbot_blue_dark</item> <!-- Status Bar -->
        <item name="colorSecondary">@color/green_running</item>
        <item name="android:colorBackground">@color/sunflower_gray_50</item>
    </style>

    <style name="Theme.SandBot" parent="Base.Theme.SandBot"/>

    <style name="Theme.SandBot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SandBot.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.SandBot.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
